{
  "name": "next-boilerplate",
  "private": true,
  "description": "My starter template for NextJS with TypeScript.",
  "homepage": "https://github.com/mikestecker/next-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikestecker/next-boilerplate.git"
  },
  "author": "Mike Stecker <mike@stecker.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikestecker/next-boilerplate/issues"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build-stats": "ANALYZE=true yarn build",
    "export": "next build && next export -o dist",
    "build-prod": "run-s clean build export",
    "clean": "rimraf .next dist",
    "lint": "next lint",
    "prepare": "husky install",
    "test": "jest"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "next": "12.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.0.3",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "16.11.7",
    "@types/react": "17.0.34",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.3.1",
    "eslint": "7",
    "eslint-config-next": "12.0.3",
    "husky": ">=6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "prettier": "2.4.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.19",
    "ts-jest": "^27.0.7",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=16",
    "yarn": ">=1.22.5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not IE 11"
  ],
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
